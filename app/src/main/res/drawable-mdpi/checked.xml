<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/md_black" />
                    <gradient
                        android:startColor="#fff"
                        android:centerColor="#fff"
                        android:endColor="#fff"
                        android:angle="270" />
                    <size
                        android:width="20dp"
                        android:height="20dp" />
                </shape>
            </item>

            <item
                android:width="6dp"
                android:height="2dp"
                android:top="10dp"
                android:left="3dp">
                <rotate
                    android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/md_black"/>
                    </shape>
                </rotate>
            </item>

            <item
                android:width="12dp"
                android:height="2dp"
                android:top="8dp"
                android:left="5dp">
                <rotate
                    android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/md_black"/>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>

</selector>