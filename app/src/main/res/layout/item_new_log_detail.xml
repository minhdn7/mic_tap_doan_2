<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_grey_100"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:visibility="visible"
            android:background="@color/md_grey_200"
            android:id="@+id/layout_process"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:background="@drawable/background_border_2dp_grey_radius">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_name"
                        android:textStyle="bold"
                        android:text="@string/tv_ho_ten_dv"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/arial"
                        android:paddingLeft="5dp"
                        android:textColor="@color/md_grey_800"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_username"
                        android:text="(Username)"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/arial"
                        android:paddingLeft="5dp"
                        android:textColor="@color/md_grey_800"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_date"
                    android:text="12/06/2018 12:06"
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:fontFamily="@font/arial"
                    android:paddingRight="5dp"
                    android:gravity="right"
                    android:textColor="@color/md_grey_800"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff">
                <TextView
                    android:id="@+id/tv_noidung"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorPrimary"/>
                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginTop="5dp"
                    android:background="@color/md_grey_100"/>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_xlc_lb"
                        android:paddingLeft="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/arial"
                        android:text="Xử lý chính"
                        android:textColor="@color/md_grey_600"/>
                    <TextView
                        android:id="@+id/txtXLC"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.8"
                        android:textStyle="bold"
                        android:fontFamily="@font/arial"
                        android:text="Xử lý chính"
                        android:textColor="@color/md_grey_800"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_ph_lb"
                        android:paddingLeft="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/arial"
                        android:text="Phối hợp"
                        android:textColor="@color/md_grey_600"/>
                    <TextView
                        android:id="@+id/txtPH"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.8"
                        android:textStyle="bold"
                        android:fontFamily="@font/arial"
                        android:text="Xử lý chính"
                        android:textColor="@color/md_grey_800"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_xem_lb"
                        android:paddingLeft="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/arial"
                        android:text="Xem để biết"
                        android:textColor="@color/md_grey_600"/>
                    <TextView
                        android:id="@+id/txtXem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.8"
                        android:textStyle="bold"
                        android:fontFamily="@font/arial"
                        android:text="Xử lý chính"
                        android:textColor="@color/md_grey_800"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_xyk_lb"
                        android:paddingLeft="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/arial"
                        android:text="Xin ý kiến"
                        android:textColor="@color/md_grey_600"/>
                    <TextView
                        android:id="@+id/txtXYK"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.8"
                        android:textStyle="bold"
                        android:fontFamily="@font/arial"
                        android:text="Xử lý chính"
                        android:textColor="@color/md_grey_800"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>