<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutDisplay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vn.com.vnpt.vinaphone.vnptsoftware.qlvbdhcaobang.view.activity.SelectPersonActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_grey_200"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbarSelectPerson"
                layout="@layout/toolbar_select_person" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtNameLabel"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/arial"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/tv_ho_ten"
                    android:textColor="@color/md_black"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/txtName"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="4"
                    android:background="@drawable/background_border_1dp"
                    android:fontFamily="@font/arial"
                    android:hint="@string/tv_ho_ten"
                    android:paddingLeft="5dp"
                    android:textColor="@color/md_black"
                    android:textColorHint="@color/md_grey_600" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="0dp" />

                <Spinner
                    android:id="@+id/sUnit"
                    style="@style/spinner_style_c"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:textColor="@color/md_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSelectDV"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/border_btn_search"
                    android:fontFamily="@font/arial"
                    android:text="Chọn theo nhóm đơn vị"
                    android:textAllCaps="false"
                    android:textColor="@color/md_white" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="0dp" />

                <Button
                    android:id="@+id/btnSelectCN"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/border_btn_search"
                    android:fontFamily="@font/arial"
                    android:text="Chọn theo nhóm cá nhân"
                    android:textAllCaps="false"
                    android:textColor="@color/md_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtPositionLabel"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/POSITION_ACCOUNT"
                    android:textColor="@color/md_black"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/sPosition"
                    style="@style/spinner_style_c"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:textColor="@color/md_black"
                    android:visibility="gone" />
                <!--<Spinner-->
                <!--android:id="@+id/sUnit"-->
                <!--android:layout_width="0dp"-->
                <!--style="@style/spinner_style_c"-->
                <!--android:layout_height="30dp"-->
                <!--android:layout_weight="4"-->
                <!--android:textColor="@color/md_black"-->
                <!--android:gravity="center"-->
                <!--android:layout_gravity="center_vertical"/>-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtUnitLabel"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/UNIT_ACCOUNT"
                    android:textColor="@color/md_black" />
                <!--<Spinner-->
                <!--android:id="@+id/sUnit"-->
                <!--android:layout_width="0dp"-->
                <!--style="@style/spinner_style_c"-->
                <!--android:layout_height="30dp"-->
                <!--android:layout_weight="4"-->
                <!--android:textColor="@color/md_black"-->
                <!--android:gravity="center"-->
                <!--android:layout_gravity="center_vertical"/>-->
            </LinearLayout>
            <!--<LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">
                <TextView
                    android:id="@+id/txtGroupLabel"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textColor="@color/md_black"
                    android:text="@string/GROUP_ACCOUNT"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center_vertical"/>
                <Spinner
                    android:id="@+id/sGroup"
                    android:layout_width="0dp"
                    style="@style/spinner_style_c"
                    android:layout_height="30dp"
                    android:layout_weight="4"
                    android:textColor="@color/md_black"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="@color/md_black" />

                <Button
                    android:id="@+id/btnSearch"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/border_btn_search"
                    android:fontFamily="@font/arial"
                    android:text="@string/SEARCH_LABEL_BTN"
                    android:textAllCaps="false"
                    android:textColor="@color/md_white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="@color/md_black" />
            </LinearLayout>
        </LinearLayout>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:id="@+id/layoutDisplay1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/md_grey_200"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_load_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Vui lòng đợi, dữ liệu đang được tải..."
                    android:textColor="@color/colorPrimary"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/layout_process"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@color/md_grey_200"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/background_border_top"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_hoten"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="5"
                            android:fontFamily="@font/arial"
                            android:paddingLeft="5dp"
                            android:text="@string/tv_ho_ten"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_xuly_chinh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:fontFamily="@font/arial"
                            android:text="@string/tv_XLC"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_dong_xuly"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:fontFamily="@font/arial"
                            android:text="@string/tv_PH"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_xem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:fontFamily="@font/arial"
                            android:text="@string/tv_Xem"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/btnMorongXL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:drawableLeft="@drawable/ic_down"
                        android:fontFamily="@font/arial"
                        android:text=" Nhấn vào để chọn người nhận"
                        android:textColor="@color/md_grey_800"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btnThuGonXL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:drawableLeft="@drawable/ic_up"
                        android:fontFamily="@font/arial"
                        android:text=" Thu gọn"
                        android:textColor="@color/md_grey_800"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/layout_person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="#fff"
                        android:orientation="vertical"></LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_process_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@color/md_grey_200"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/background_border_top"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="5"
                            android:fontFamily="@font/arial"
                            android:paddingLeft="5dp"
                            android:text="@string/tv_ho_ten"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:fontFamily="@font/arial"
                            android:text="@string/tv_xuly_chinh"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/arial"
                            android:text="@string/tv_dong_xuly"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/layout_person_process"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="#fff"
                            android:orientation="vertical"></LinearLayout>
                    </ScrollView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_send_notify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/md_grey_200"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/background_border_top_green"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_hoten_donvi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arial"
                            android:paddingLeft="5dp"
                            android:text="@string/tv_ho_ten_dv"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_xuly_chinh_donvi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arial"
                            android:gravity="right"
                            android:paddingRight="5dp"
                            android:text="@string/tv_xuly_chinh"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/layout_donvi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="#fff"
                            android:orientation="vertical"></LinearLayout>
                    </ScrollView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_send_xemdb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/md_grey_200"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/background_border_top_green"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arial"
                            android:paddingLeft="5dp"
                            android:text="@string/tv_ho_ten_dv"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arial"
                            android:gravity="right"
                            android:paddingRight="5dp"
                            android:text="@string/tv_xem_db"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/layout_donvi_xemdb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="#fff"
                            android:orientation="vertical"></LinearLayout>
                    </ScrollView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_send_lienthong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/md_grey_200"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/background_border_top_green"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_hoten_lt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="5"
                            android:fontFamily="@font/arial"
                            android:paddingLeft="5dp"
                            android:text="@string/tv_DonVi"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_xuly_chinh_lt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:fontFamily="@font/arial"
                            android:gravity="center"
                            android:text="@string/tv_XLC"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_dong_xuly_lt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:fontFamily="@font/arial"
                            android:gravity="center"
                            android:text="@string/tv_PH"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_xem_lt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:fontFamily="@font/arial"
                            android:gravity="center"
                            android:text="@string/tv_Xem"
                            android:textColor="@color/md_white"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/btnMorongLT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:drawableLeft="@drawable/ic_down"
                        android:fontFamily="@font/arial"
                        android:text=" Nhấn vào để chọn đơn vị liên thông nội bộ"
                        android:textColor="@color/md_grey_800"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btnThuGonLT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:drawableLeft="@drawable/ic_up"
                        android:fontFamily="@font/arial"
                        android:text=" Thu gọn"
                        android:textColor="@color/md_grey_800"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/layout_donvi_lt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="#fff"
                        android:orientation="vertical"></LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>
</LinearLayout>
