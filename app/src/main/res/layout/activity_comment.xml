<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vn.com.vnpt.vinaphone.vnptsoftware.qlvbdhcaobang.view.activity.CommentActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include
                android:id="@+id/toolbarDetail"
                layout="@layout/toolbar_comment" />
        </LinearLayout>
        <ScrollView
            android:background="@color/md_grey_200"
            android:id="@+id/layoutDisplay"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <EditText
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/txtComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_red_500"
                    android:minLines="3"
                    android:paddingLeft="10dp"
                    android:hint="@string/SEND_COMMENT"
                    android:textColorHint="@color/colorHint"
                    android:background="@drawable/background_border_2dp_radius"/>
                <LinearLayout
                    android:id="@+id/layoutComment"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/md_grey_200"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_comment_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:text="@string/tv_tonghop_y_kien"/>
                    <LinearLayout
                        android:id="@+id/layout_log"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/md_grey_200"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_trichyeu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:textSize="16dp"
                            android:textColor="@color/colorTextGrey"
                            android:text="@string/tv_trichyeu"/>
                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:paddingTop="3dp"
                            android:textColor="@color/md_black"
                            android:textSize="18dp"
                            android:text="Ban hanh quy che dam bao an toan thong tin trong hoat dong ung dung cong nghe thong tin"/>
                        <LinearLayout
                            android:paddingTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_cqbh_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_cqbh"
                                android:textSize="16dp"
                                android:textColor="@color/colorTextGrey" />
                            <TextView
                                android:id="@+id/tv_cqbh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:textSize="16dp"
                                android:textColor="@color/md_black"
                                android:text="VNPT Software" />
                        </LinearLayout>
                        <LinearLayout
                            android:paddingTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_so_ki_hieu_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_sokyhieu"
                                android:textSize="16dp"
                                android:textColor="@color/colorTextGrey" />
                            <TextView
                                android:id="@+id/tv_kh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/md_red_500"
                                android:paddingLeft="5dp"
                                android:textSize="16dp"
                                android:text="123/VNP" />
                        </LinearLayout>
                        <LinearLayout
                            android:paddingTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tv_ngayden_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_ngayden"
                                    android:textSize="16dp"
                                    android:textColor="@color/colorTextGrey" />
                                <TextView
                                    android:id="@+id/tv_ngayden"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/md_black"
                                    android:paddingLeft="5dp"
                                    android:textSize="16dp"
                                    android:text="12/05/2017" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:paddingRight="5dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tv_ngayvb_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_ngay_vb"
                                    android:textSize="16dp"
                                    android:textColor="@color/colorTextGrey" />
                                <TextView
                                    android:id="@+id/tv_ngayvb"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/md_black"
                                    android:textSize="16dp"
                                    android:paddingLeft="5dp"
                                    android:text="19/05/2017" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:paddingTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_hinhthucvb_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_hinhthucvb"
                                android:textSize="16dp"
                                android:textColor="@color/colorTextGrey" />
                            <TextView
                                android:id="@+id/tv_hinhthucvb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/md_black"
                                android:paddingLeft="5dp"
                                android:textSize="16dp"
                                android:text="Công văn" />
                        </LinearLayout>
                        <LinearLayout
                            android:paddingTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_gravity="left"
                                android:textSize="16dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tv_sovb_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_sovanban"
                                    android:textSize="16dp"
                                    android:textColor="@color/colorTextGrey" />
                                <TextView
                                    android:id="@+id/tv_sovb"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/md_black"
                                    android:paddingLeft="5dp"
                                    android:textSize="16dp"
                                    android:text="GP CQĐT" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:paddingRight="5dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tv_soden_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_soden"
                                    android:textSize="16dp"
                                    android:textColor="@color/colorTextGrey" />
                                <TextView
                                    android:id="@+id/tv_soden"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/md_black"
                                    android:paddingLeft="5dp"
                                    android:textSize="16dp"
                                    android:text="150" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:paddingTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_do_khan_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_do_khan"
                                android:textSize="16dp"
                                android:textColor="@color/colorTextGrey" />
                            <TextView
                                android:id="@+id/tv_do_khan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:textSize="16dp"
                                android:textColor="@color/md_red_500"
                                android:text="Thường mật" />
                        </LinearLayout>
                        <LinearLayout
                            android:paddingTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_hanxuly_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_hanxuly"
                                android:textSize="16dp"
                                android:textColor="@color/colorTextGrey" />
                            <TextView
                                android:id="@+id/tv_hanxuly"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:textSize="16dp"
                                android:textColor="@color/md_black"
                                android:text="21/05/2017" />
                        </LinearLayout>
                        <LinearLayout
                            android:paddingTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_sotrang_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_sotrang"
                                android:textSize="16dp"
                                android:textColor="@color/colorTextGrey" />
                            <TextView
                                android:id="@+id/tv_sotrang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:textSize="16dp"
                                android:textColor="@color/md_black"
                                android:text="01" />
                        </LinearLayout>
                        <LinearLayout
                            android:paddingTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_hinhthucgui_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_hinhthucgui"
                                android:textSize="16dp"
                                android:textColor="@color/colorTextGrey" />
                            <TextView
                                android:id="@+id/tv_hinhthucgui"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:textSize="16dp"
                                android:textColor="@color/md_black"
                                android:text="Hệ thống QLVB" />
                        </LinearLayout>
                        <LinearLayout
                            android:paddingTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_filedinhkem_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_file_dinh_kem"
                                android:textSize="16dp"
                                android:textColor="@color/colorTextGrey" />
                            <LinearLayout
                                android:id="@+id/layout_file_attach"
                                android:paddingLeft="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:background="@color/md_grey_200"/>
                        <LinearLayout
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_vblienquan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:textColor="@color/colorTextGrey"
                                android:text="@string/tv_vb_lienquan"/>
                            <LinearLayout
                                android:id="@+id/layout_related_docs"
                                android:paddingTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
