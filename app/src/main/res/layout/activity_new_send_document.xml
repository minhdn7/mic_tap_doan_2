<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vn.com.vnpt.vinaphone.vnptsoftware.qlvbdhcaobang.view.activity.SendDocumentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include
                android:id="@+id/toolbarDetail"
                layout="@layout/toolbar_send_document" />
        </LinearLayout>
        <ScrollView
            android:id="@+id/layoutDisplay"
            android:background="@color/md_grey_200"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:background="@color/md_grey_200">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">
                    <EditText
                        android:id="@+id/txtNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/md_red_500"
                        android:minLines="3"
                        android:paddingLeft="10dp"
                        android:hint="@string/SEND_CONTENT"
                        android:textColorHint="@color/colorHint"
                        android:background="@drawable/background_border_1dp_grey_radius"/>

                    <TextView
                        android:id="@+id/tv_han_xu_ly"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="@string/str_hanXuLy"
                        android:textColor="@color/md_grey_800"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingEnd="10dp"
                        android:background="@drawable/background_border_1dp_grey_radius"
                        android:drawableRight="@drawable/schedule"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/ll_auto_send_job"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="left"
                            android:layout_weight="0.5"
                            android:orientation="horizontal">
                            <CheckBox
                                android:id="@+id/checkAutoSendJob"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/md_grey_800" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tuDongGiaoViec"
                                android:fontFamily="@font/arial"
                                android:textColor="@color/md_grey_800"
                                android:textStyle="bold"
                                android:textSize="14sp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_send_sms"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginEnd="5dp"
                            android:gravity="right"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" Gá»­i SMS"

                                android:fontFamily="@font/arial"
                                android:textColor="@color/md_grey_800"
                                android:textStyle="bold"
                                android:textSize="14sp"/>
                            <CheckBox
                                android:id="@+id/checkSMS"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/md_grey_800" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutXLCTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/md_grey_200">
                    <LinearLayout
                        android:background="@drawable/background_border_top"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_6dp">
                        <TextView
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:fontFamily="@font/arial"
                            android:text="@string/tv_xuly_chinh"
                            android:layout_width="0dp"
                            android:layout_weight="9"
                            android:textColor="@color/md_white"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layoutXLC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#fff">
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutPHTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/md_grey_200">
                    <LinearLayout
                        android:background="@drawable/background_border_top"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_6dp">
                        <TextView
                            android:fontFamily="@font/arial"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:text="@string/tv_phoihop"
                            android:layout_width="0dp"
                            android:layout_weight="9"
                            android:textColor="@color/md_white"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layoutPH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#fff">
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutXemDBTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/md_grey_200">
                    <LinearLayout
                        android:background="@drawable/background_border_top"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_6dp">
                        <TextView
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:text="@string/tv_xem_db"
                            android:layout_width="0dp"
                            android:layout_weight="9"
                            android:fontFamily="@font/arial"
                            android:textColor="@color/md_white"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layoutXemDB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#fff">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>
